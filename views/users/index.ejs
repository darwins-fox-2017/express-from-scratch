<!DOCTYPE html>
<html>
<head>
<style>
table {
    border-collapse: collapse;
    width: 100%;
}

th, td {
    text-align: left;
    padding: 8px;
}

tr:nth-child(even){background-color: #f2f2f2}

th {
    background-color: #4CAF50;
    color: white;
}
</style>
</head>
<body>

<h2>Users</h2>

<table>

  <tr>
    <th>ID</th>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Phone</th>
    <th>Action</th>
  </tr>
  <tbody>
    <% users.forEach(function(user){ %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.firstname %></td>
        <td><%= user.lastname %></td>
        <td><%= user.phone %></td>
        <td><a href="/users/<%= user.id %>/edit"> Edit </a>  <a href="/users/<%= user.id %>/delete"> Delete </a></td>
      </tr>
      <% })%>

  </tbody>

</table>

</body>
</html>
