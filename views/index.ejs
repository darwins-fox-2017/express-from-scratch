<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title><%= title %></title>
  </head>
  <body>
    <form class="" action="/create" method="post">
      <label>First Name : <input type="text" name="firstname"></label><br>
      <label>Last Name : <input type="text" name="lastname"></label><br>
      <label>Phone : <input type="text" name="phone"></label><br>
      <input type="submit" value="Masukin aja">
    </form>

    <table>
      <thead>
        <tr>
          <td>ID</td>
          <td>Firstname</td>
          <td>Lastname</td>
          <td>Phone</td>
          <td>Action</td>
        </tr>
      </thead>
      <tbody>
        <% for(let i=0; i<Users.length; i++) { %>
        <tr>
          <td><%= Users[i].id %></td>
          <td><%= Users[i].firstname %></td>
          <td><%= Users[i].lastname %></td>
          <td><%= Users[i].phone %></td>
          <td><a href="/delete/<%= Users[i].id %>">Delete</a> | <a href="/edit/<%= Users[i].id %>">Edit</a></td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </body>
</html>
