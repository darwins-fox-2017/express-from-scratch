<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title><%= title %></title>
  <link rel='stylesheet' href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous"/>
</head>
<body>
  <div class="container">
    <div class="row">
      <div class="title" style="text-align: center;">
        <h1><%= title %></h1>
      </div>
      <div class="panel panel-default">
        <div class="panel-heading"><center><strong>Table URL</strong></center></div>
          <table border = "1">
            <tr>
              <th>ID</th>
              <th>Firstname</th>
              <th>Lastname</th>
              <th>Phone</th>
              <th>Action</th>
            </tr>
            <% for(var i = 0; i < dataUser.length; i++){ %>
              <tr>
                <td><%= dataUser[i].id %></td>
                <td><%= dataUser[i].firstname %></td>
                <td><%= dataUser[i].lastname %></td>
                <td><%= dataUser[i].phone %></td>
                <td>
                  <a href="/update/<%= dataUser[i].id %>">Update</a>
                  <a href="/delete/<%= dataUser[i].id %>" onclick="return confirm('Are You Sure!')">Delete</a>
                </td>
                <% } %>
          </table>
      </div>
      <div class="panel panel-default">
        <div class="panel-heading"><center><strong>Table URL</strong></center></div>
          <form action="/" method="post">
            <br>
            <label>Firstname  : <input type="text" name="firstname"><label>
            <label>Lastname   : <input type="text" name="lastname"><label>
            <label>Phone      : <input type="text" name="phone"><label>
            <input type="submit" value="Submit">
          </form>
      </div>
    </div>
  </div>
</body>
</html>
